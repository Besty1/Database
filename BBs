
   -- BBS(论坛)
create database BBS;
use BBs;
   -- Board
   create table Board(
      ID int not null primary key,
      name varchar(16) not null,
      date  datetime,
      description  varchar(64)
   );



   -- Forum
   create table Forum(
     FID int not null primary key,
     Forum_name  varchar(16) not null,
     Forum_description  varchar(64) not null,
     ID  int not null
   );




   -- Article
   create table Article(
     AID int not null primary key,
     theme varchar(16) not null,
     Rosting_time  datetime,
     FID  int not null,
     viewed  varchar(32),
     content  varchar(128),
     UID  int not null,
     LastReplyDate varchar(16),
     LastReplyUID  varchar(16)
   );





   -- Reply
    create table Reply(
      content varchar(128),
      title  varchar(16),
      UID int not null,
      ReplyDate  varchar(32),
      AID int
    );


    -- 版主
     create table moderator(
       FID int not null primary key,
       UID int not null primary key,
       OperUID not null int,
       OperDare varchar(16),
       foreign key(FID,UID)
     );


     -- UserDesc
    create table UserDesc(
      UID int not null primary key,
      Desci  varchar(16) not null,
      Name  varchar(16),
      Sex varchar(8),
      Birthday  varchar(16)
      foreign key(UID)
    );

     -- User
     create table User(
       UID int not null primary key,
       UserName varchar(16) not null,
       Password  varchar(32) not null,
     );


     -- Entity7
     create table Entity7(
       UID int not null,
      RoleID int not null,
      primary key(UID,RoleID),
      foreign key(UID,RoleID)
     );


     --  Entity9
      create table Entity9(
        RID int not null,
        RoleID int not null,
        primary key(RID,RoleID),
        foreign key(RID,RoleID)
      );


      -- Role
      create table Role(
        RoleID int not null primary key,
        RoleName varchar(16)
      );


       -- Permissions
       create table Permissions(
         RID int not null primary key,
         RightName varchar(16)
       );
